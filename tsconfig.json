{
  "compilerOptions": {
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": false,
    "stripInternal": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["es6", "dom"],
    "target": "es2016",
    "module": "commonjs",
    "declaration": true,
    "declarationDir": "./dist/",
    "outDir": "./build/",
    "strict": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./tests/**/*.spec.ts"
  ],
  "compileOnSave": false
}
